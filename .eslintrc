{
	"extends": ["next/core-web-vitals", "prettier"],
	"rules": {
		"@next/next/no-img-element": "off",
		"unused-imports/no-unused-imports": "error",
		"unused-imports/no-unused-vars": [
			"warn",
			{
				"vars": "all",
				"varsIgnorePattern": "^_",
				"args": "after-used",
				"argsIgnorePattern": "^_"
			}
		]
	},
	"plugins": ["unused-imports"]
}
